# NeighborTools Environment Configuration
# Copy this file to .env and fill in the values

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_USER=neighbortools
POSTGRES_PASSWORD=neighbortools_dev_password
POSTGRES_DB=neighbortools

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# ===========================================
# SMTP Configuration (for email notifications)
# ===========================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@neighbortools.net

# ===========================================
# Application URLs
# ===========================================
APP_URL=http://localhost:5173

# ===========================================
# Frontend Configuration
# ===========================================
VITE_API_URL=http://localhost:3000/api

# ===========================================
# Service URLs (Internal Communication)
# Used by API Gateway to route requests
# ===========================================
USER_SERVICE_URL=http://user-service:3001
TOOL_SERVICE_URL=http://tool-service:3002
LENDING_SERVICE_URL=http://lending-service:3003
NEIGHBORHOOD_SERVICE_URL=http://neighborhood-service:3004
NOTIFICATION_SERVICE_URL=http://notification-service:3005
